{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ECS IDL",
	"patterns": [
		{
			"include": "#global_keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#component_decl"
		},
		{
			"include": "#transient_decl"
		},
		{
			"include": "#action_decl"
		},
		{
			"include": "#system_decl"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "//(.*)$"
				},
				{
					"name": "comment.line.number-sign",
					"match": "#(.*)$"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"global_keywords": {
			"patterns": [
				{
					"name": "keyword.other",
					"match": "\\b(package)\\b"
				}
			]
		},
		"type_decl": {
			"patterns": [
				{
					"match": "\\b(component|transient|action|enum|struct)\\b\\s+([A-Za-z]+)",
					"captures": {
						"1": {
							"name": "keyword.ecs-idl"
						},
						"2": {
							"name": "entity.name.type"
						}
					}
				}
			]
		},
		"component_decl": {
			"begin": "\\b(component)\\b\\s+([A-Za-z]+)\\s*({)",
			"end": "(})",
			"beginCaptures": {
				"1": {
					"name": "keyword.ecs-idl"
				},
				"2": {
					"name": "entity.name.type"
				},
				"3": {
					"name": "punctuation"
				},
				"4": {
					"name": "punctuation"
				}
			},
			"endCaptures": {
				"1": {
					"name": "punctuation"
				}
			},
			"patterns": [
				{
					"include": "#builtin_type"
				},
				{
					"include": "#comments"
				}
			]
		},
		"transient_decl": {
			"begin": "\\b(transient)\\b\\s+([A-Za-z]+)\\s*({)",
			"end": "(})",
			"beginCaptures": {
				"1": {
					"name": "keyword.ecs-idl"
				},
				"2": {
					"name": "entity.name.type"
				},
				"3": {
					"name": "punctuation"
				},
				"4": {
					"name": "punctuation"
				}
			},
			"endCaptures": {
				"1": {
					"name": "punctuation"
				}
			},
			"patterns": [
				{
					"include": "#builtin_type"
				},
				{
					"include": "#comments"
				}
			]
		},
		"action_decl": {
			"begin": "\\b(action)\\b\\s+([A-Za-z]+)\\s*({)",
			"end": "(})",
			"beginCaptures": {
				"1": {
					"name": "keyword.ecs-idl"
				},
				"2": {
					"name": "entity.name.type"
				},
				"3": {
					"name": "punctuation"
				},
				"4": {
					"name": "punctuation"
				}
			},
			"endCaptures": {
				"1": {
					"name": "punctuation"
				}
			},
			"patterns": [
				{
					"include": "#builtin_type"
				},
				{
					"include": "#system_component_decl"
				},
				{
					"include": "#generates_decl"
				},
				{
					"include": "#comments"
				}
			]
		},
		"system_decl": {
			"begin": "\\b(system)\\b\\s+([A-Za-z]+)\\s*({)",
			"end": "(})",
			"beginCaptures": {
				"1": {
					"name": "keyword.ecs-idl"
				},
				"2": {
					"name": "entity.name.type"
				},
				"3": {
					"name": "punctuation"
				},
				"4": {
					"name": "punctuation"
				}
			},
			"endCaptures": {
				"1": {
					"name": "punctuation"
				}
			},
			"patterns": [
				{
					"include": "#system_component_decl"
				},
				{
					"include": "#generates_decl"
				},
				{
					"include": "#comments"
				}
			]
		},
		"builtin_type": {
			"patterns": [
				{
					"name": "storage.type",
					"match": "\\b(int8|uint8|int16|uint16|int32|uint32|bool)\\b"
				},
				{
					"name": "punctuation",
					"match": ";"
				}
			]
		},
		"system_component_decl": {
			"patterns": [
				{
					"match": "(((required\\s+readonly|optional\\s+readonly|required|optional|readonly|exclude|include|adds|removes)\\s+)+)([A-Za-z]+)\\s*(;)",
					"captures": {
						"3": {
							"name": "keyword.control"
						},
						"4": {
							"name": "entity.name.type"
						},
						"5": {
							"name": "punctuation"
						}
					}
				},
				{
					"include": "#system_decl"
				},
				{
					"include": "#comments"
				}
			]
		},
		"generates_decl": {
			"patterns": [
				{
					"begin": "\\b(generates)\\b\\s*({)",
					"end": "}",
					"beginCaptures": {
						"1": {
							"name": "keyword.ecs-idl"
						},
						"2": {
							"name": "punctuation"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation"
						}
					}
				},
				{
					"include": "#system_component_decl"
				}
			]
		}
	},
	"scopeName": "source.ecs-idl"
}